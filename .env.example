# Root example env (rename to .env and set values)

# Backend (server) variables
PORT=3000
FRONTEND_ORIGIN=http://localhost:5173

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=1h

# OAuth (Google example)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
OAUTH_AUTHORIZE_URL=https://accounts.google.com/o/oauth2/auth
OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/callback
OAUTH_SCOPES="openid profile email"
OAUTH_CALLBACK_URL=http://localhost:3000/api/oauth/callback

# Stable Diffusion / Image provider
SD_API_URL=
SD_API_KEY=

# Database (optional)
DATABASE_URL=postgres://user:pass@localhost:5432/dbname
DB_DIALECT=sqlite
DB_STORAGE=./data/database.sqlite
DB_LOGGING=false

# Frontend / Vite
VITE_API_BASE=http://localhost:3000
VITE_OAUTH_CLIENT_ID=
VITE_OAUTH_AUTHORIZE_URL=https://accounts.google.com/o/oauth2/auth
VITE_OAUTH_TOKEN_URL=https://oauth2.googleapis.com/token
VITE_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/callback
VITE_OAUTH_SCOPES="openid profile email"
VITE_OAUTH_BACKEND_TOKEN_EXCHANGE=/api/oauth/exchange
VITE_SD_API_URL=
VITE_SD_API_KEY=